<!DOCTYPE html>
<html>
<head>
  <title>PersonalTimeTracker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
  

<% if user_signed_in? %>
<div id="header">
  <p>Welcome <%= current_user %> [<%= link_to "Logout", destroy_user_session_path, :method => :delete %>]</p>
  <ul>
    <li>
      <%= link_to "Clients", "/clients" %>
      <ul><li><%= link_to "New", new_client_path %></li></ul>
    </li>
    <li>
      <%= link_to "Projects", "/projects" %>
      <ul><li><%= link_to "New", new_project_path %></li></ul>
    </li>
    <li>
      <%= link_to "Time Tracking", "/time_tracks" %>
      <ul><li><%= link_to "New", new_time_track_path %></li></ul>
    </li>
    </ul>
</div>
<% end  %>
<%= yield %>

</body>
</html>
