<%= form_for(@time_track) do |f| %>
  <% if @time_track.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@time_track.errors.count, "error") %> prohibited this time_track from being saved:</h2>

      <ul>
      <% @time_track.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :start %><br />
    <%= f.datetime_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br />
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :interrumptions %><br />
    <%= f.text_field :interrumptions %> (min)
  </div>
  <div class="field">
    <%= f.label :project %><br />
    <%= f.collection_select :project_id, Project.all, :id, :name, :prompt => true %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
